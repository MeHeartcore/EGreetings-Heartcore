@{
  Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section HeadScripts {
  <!-- iCheck for checkboxes and radio inputs -->
  <link rel="stylesheet" href="~/lib/icheck-bootstrap/icheck-bootstrap.min.css">
  <link href="@Url.Action("CategoryCss", "Css")" rel="stylesheet" type="text/css" asp-append-version="true" />
}

<h1>
  Categories Page
</h1>
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Responsive Hover Table: List of Categories</h3>

        @* <div class="card-tools">
        <div class="input-group input-group-sm" style="width: 150px;">
        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

        <div class="input-group-append">
        <button type="submit" class="btn btn-default">
        <i class="fas fa-search"></i>
        </button>
        </div>
        </div>
        </div>
        </div> *@
        <!-- /.card-header -->
        <div class="card-body table-responsive p-0">
          <table class="table table-hover text-nowrap">
            <thead>
              <tr>
                <th>CategoryID</th>
                <th>CategoryName</th>
                <th>CreatedDate</th>
                <th>TotalTemplates</th>
                <th colspan="4">Action</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>1</td>
                <td>Christmas</td>
                <td>02-10-2024</td>
                <td>20</td>
                @* Add new templates *@
                <td>
                  <button type="button" class="btn btn-block btn-outline-primary btn-flat btn-xs">Add</button>
                </td>
                @* View list of templates *@
                <td>
                  <button type="button" class="btn btn-block btn-outline-info btn-flat btn-xs">Templates</button>
                </td>
                @* Edit category *@
                <td>
                  <button type="button" class="btn btn-block btn-outline-secondary btn-flat btn-xs">Edit</button>
                </td>
                @* Deactive *@
                <td>
                  <div>
                    <input type="checkbox" data-bootstrap-switch data-off-color="danger" data-on-color="success" />
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->
    </div>
  </div>

  @section Scripts {
    <!-- Bootstrap Switch -->
    <script src="~/lib/bootstrap-switch/js/bootstrap-switch.min.js"></script>

    <script>
      $(function () {
        $("input[data-bootstrap-switch]").each(function () {
          $(this).bootstrapSwitch('state', $(this).prop('checked'));

          var switchContainer = $(this).closest('.bootstrap-switch-container');
          switchContainer.find('.bootstrap-switch-handle-on, .bootstrap-switch-handle-off').css({
            fontSize: '14px'
          });
        })
      })
    </script>
  }